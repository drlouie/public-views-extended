sub checkInput {
	if ($name =~ "http" || $name =~ "ftp" || $name =~ "://" || $name =~ "html") { $erroredOut = 1; $miError = 'invalid username was submitted.'; }
	if ($email =~ "http" || $email =~ "ftp" || $email =~ "://" || $email =~ "html") { $erroredOut = 1; $miError = 'invalid email address was submitted.'; }
	if ($subject =~ "http" || $subject =~ "ftp" || $subject =~ "://" || $subject =~ "html") {  $erroredOut = 1; $miError = 'invalid subject was submitted.'; }
	
	if ($erroredOut eq "1") {
		print "Content-type: text/html\n\n";
		print "<script>alert('There was an error saving your post. Error: \\'$miError\\'');history.go(-1)</script>";
		exit;	
	}
}


